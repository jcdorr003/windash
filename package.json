{
  "name": "windash",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "concurrently \"pnpm:dev:app\" \"pnpm:dev:ws\"",
    "dev:app": "react-router dev",
    "dev:ws": "tsx watch app/server/websocket-server.ts",
    "start": "node scripts/start-production.js",
    "start:app": "react-router-serve build/server/index.js",
    "start:ws": "tsx app/server/websocket-server.ts",
    "typecheck": "react-router typegen && tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "dev:stack": "bash scripts/setup-dev.sh --wait",
    "dev:stack:rebuild": "bash scripts/setup-dev.sh --rebuild --wait",
    "dev:stack:wipe": "bash scripts/setup-dev.sh --wipe-db --wait",
    "clean:dev": "bash scripts/cleanup.sh --dev",
    "clean:dev:full": "bash scripts/cleanup.sh --dev --with-volumes --images --yes"
  },
  "dependencies": {
    "@react-router/serve": "7.9.2",
    "@remix-run/node-fetch-server": "0.9.0",
    "d3": "^7.9.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "postgres": "^3.4.7",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-router": "7.9.2",
    "tsx": "^4.20.6",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@react-router/dev": "7.9.2",
    "@react-router/fs-routes": "7.9.2",
    "@tailwindcss/vite": "4.1.13",
    "@types/d3": "^7.4.3",
    "@types/node": "24.5.2",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-rsc": "0.4.31",
    "concurrently": "^9.2.1",
    "tailwindcss": "4.1.13",
    "typescript": "5.9.2",
    "vite": "7.1.6",
    "vite-plugin-devtools-json": "1.0.0",
    "vite-tsconfig-paths": "5.1.4"
  }
}